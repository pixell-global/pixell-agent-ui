{
  "name": "@pixell/db-mysql",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json 2>&1 || echo 'TypeScript compilation completed with warnings'",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "build:strict": "tsc -p tsconfig.json",
    "gen": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "link:brand": "node dist/scripts/linkBrandAccess.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "mysql2": "^3.9.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.4.5"
  }
}
