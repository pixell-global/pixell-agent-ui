{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmit": false,
    "noUncheckedIndexedAccess": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "types": ["node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}


